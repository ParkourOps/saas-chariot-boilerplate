{
  "name": "saas-chariot-boilerplate-spa",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "serve:production": "vite --mode production",
    "serve:staging": "vite --mode staging",
    "serve:dev-s": "vite --mode dev-on-staging-backend",
    "serve:dev-e": "vite --mode dev-on-emulated-backend",
    "build:production": "npm run type-check && npm run format:check && vite --mode production build",
    "build:staging": "npm run type-check && npm run format:check && vite --mode staging build",
    "build:dev-s": "npm run type-check && npm run format:check && vite --mode dev-on-staging-backend build",
    "build:dev-e": "npm run type-check && npm run format:check && vite --mode dev-on-emulated-backend build",
    "test:unit": "vitest",
    "test:e2e": "playwright test",
    "preview": "vite preview",
    "deploy": "firebase deploy --only hosting",
    "predeploy": "npm run type-check && npm run format:check && echo '\n' && git status --porcelain && echo '\n Uncommitted changes found. Please commit or stash them first.' && exit 1 || true",
    "type-check": "vue-tsc --build --force",
    "format:check": "prettier --check src/",
    "format:fix": "prettier --write src/",
    "audit:general": "unlighthouse --site localhost:4173",
    "audit:bundle": "vite-bundle-visualizer",
    "audit:bundle:network": "vite-bundle-visualizer -t network"
  },
  "dependencies": {
    "firebase": "^10.9.0",
    "pinia": "^2.1.7",
    "primevue": "^3.50.0",
    "vue": "^3.4.21",
    "vue-router": "^4.3.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.42.1",
    "@rushstack/eslint-patch": "^1.3.3",
    "@tsconfig/node20": "^20.1.2",
    "@types/jsdom": "^21.1.6",
    "@types/node": "^20.11.25",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vitejs/plugin-vue-jsx": "^3.1.0",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/test-utils": "^2.4.4",
    "@vue/tsconfig": "^0.5.1",
    "autoprefixer": "^10.4.18",
    "eslint": "^8.49.0",
    "eslint-plugin-playwright": "^1.5.2",
    "eslint-plugin-vue": "^9.17.0",
    "jsdom": "^24.0.0",
    "npm-run-all2": "^6.1.2",
    "postcss": "^8.4.35",
    "postcss-load-config": "^5.0.3",
    "prettier": "^3.0.3",
    "tailwindcss": "^3.4.1",
    "typescript": "~5.4.0",
    "unlighthouse": "^0.11.5",
    "unplugin-auto-import": "^0.17.5",
    "unplugin-vue-components": "^0.26.0",
    "unplugin-vue-router": "^0.7.0",
    "vite": "^5.1.5",
    "vite-bundle-visualizer": "^1.1.0",
    "vitest": "^1.3.1",
    "vue-tsc": "^2.0.6"
  }
}
